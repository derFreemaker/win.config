// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "lsp_document_colors": "inlay",
  "disable_ai": true,

  // panels
  "git_panel": {
    "button": false,
  },
  "collaboration_panel": {
    "button": false,
  },
  "outline_panel": {
    "button": false,
  },
  "project_panel": {
    "dock": "right",
  },
  "notification_panel": {
    "dock": "right",
  },

  // search and scans
  "use_smartcase_search": true,
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/Thumbs.db",
    "**/.DS_Store",
  ],

  // code stuff
  "inlay_hints": {
    "enabled": true,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true,
    "show_background": true,
  },
  "languages": {
    "Python": {
      "indent_guides": {
        "coloring": "indent_aware",
        "background_coloring": "disabled",
      },
    },
  },
  "indent_guides": {
    "active_line_width": 4,
    "line_width": 2,
    "coloring": "fixed",
  },
  "current_line_highlight": "gutter",

  // diagnositc data
  "telemetry": {
    "diagnostics": false,
    "metrics": false,
  },

  // ui
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "theme": {
    "mode": "dark",
    "light": "One Light",
    "dark": "Colorizer Pro",
  },
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "ui_font_family": "JetBrainsMono Nerd Font",
  "ui_font_features": {
    "calt": true,
  },
  "buffer_font_features": {
    "calt": true,
  },

  // terminal
  "terminal": {
    "shell": {
      "program": "pwsh",
    },
  },

  // other
  "ensure_final_newline_on_save": true,
  "theme_overrides": {
    "Colorizer Pro": {
      "syntax": {
        "attribute": {
          "color": "#c47bb8",
        },
        "boolean": {
          "color": "#e98fd9",
        },
        "comment": {
          "color": "#787c83",
        },
        "function": {
          "color": "#54a6f2",
        },
        "keyword": {
          "color": "#ff8943",
        },
        "number": {
          "color": "#26a8b4",
        },
        "type": {
          "color": "#b4b4df",
        },
        "string": {
          "color": "#5caa66",
        },
        "variable": {
          "color": "#27e4dd",
        },
      },
    },
  },
}
